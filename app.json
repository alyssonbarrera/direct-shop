{
  "expo": {
    "name": "Direct Shop",
    "slug": "direct-shop",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "direct-shop",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.alyssonbarrera.direct-shop"
    },
    "android": {
      "backgroundColor": "#000000",
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.alyssonbarrera.directshop"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/OpenSans-Regular.ttf",
            "./assets/fonts/OpenSans-Medium.ttf",
            "./assets/fonts/OpenSans-SemiBold.ttf",
            "./assets/fonts/OpenSans-Bold.ttf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "OpenSans",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/OpenSans-Regular.ttf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/OpenSans-Medium.ttf",
                    "weight": 500
                  },
                  {
                    "path": "./assets/fonts/OpenSans-SemiBold.ttf",
                    "weight": 600
                  },
                  {
                    "path": "./assets/fonts/OpenSans-Bold.ttf",
                    "weight": 700
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./assets/fonts/OpenSans-Regular.ttf",
              "./assets/fonts/OpenSans-Medium.ttf",
              "./assets/fonts/OpenSans-SemiBold.ttf",
              "./assets/fonts/OpenSans-Bold.ttf"
            ]
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}